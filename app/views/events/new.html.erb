<h1>Create a New Event</h1>

<%= form_with model: @event, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="form-group">
    <%= f.label :available_tickets %>
    <%= f.number_field :available_tickets %>
  </div>

  <div class="form-group">
    <%= f.label :schedule_at %>
    <%= f.datetime_select :schedule_at %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create Event' %>
  </div>
<% end %>
