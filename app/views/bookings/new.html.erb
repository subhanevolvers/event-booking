<h1>New Booking for <%= @event.name %></h1>

<p><strong>Available Tickets:</strong> <%= @available_tickets %></p>

<%= form_with model: @booking, local: true do |form| %>
  <div class="form-group">
    <%= form.hidden_field :event_id, value: @event.id %>
  </div>

  <div class="form-group">
    <%= form.label :booked_tickets, "Number of Tickets" %>
    <%= form.number_field :booked_tickets, min: 1, max: @available_tickets, required: true %>
  </div>

  <div class="form-group">
    <%= form.submit "Book Tickets" %>
  </div>
<% end %>

<%= link_to 'Back to Events', events_path %>
